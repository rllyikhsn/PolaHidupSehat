<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_penjelasan"
    tools:context=".definisipolahidup">

    <TextView
        android:textColor="#FFEB3B"
        android:gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/tv_judul"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:text="@string/cv_df_penjelasan"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_below="@id/tv_judul"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#FFEB3B"
            android:layout_margin="10dp"
            android:id="@+id/df_definisi"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:text="@string/cv_df_definisi"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#FFEB3B"
            android:layout_margin="10dp"
            android:id="@+id/df_gizi"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:text="@string/cv_df_gizi"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#FFEB3B"
            android:layout_margin="10dp"
            android:id="@+id/df_pola"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:text="@string/cv_df_pola"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>